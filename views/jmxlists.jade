extends layout

block content
    table.table.table-striped
        thead
            tr
                th.col-md-3 name
                th.col-md-2 actions
                th.col-md-7 result
        tbody
            for jmx in jmxlists
                tr
                    td #{jmx}.jmx 
                    td
                        div.btn-group
                            button.btn.btn-primary.js-run-jmeter(title="run",data-url="#{jmx}",data-loading-text="<i class='glyphicon glyphicon-refresh glyphicon-refresh-animate'></i>")
                                span.glyphicon.glyphicon-play-circle
                            a.btn.btn-success.disabled.js-download(title="download",data-url="#{jmx}",href="#")
                                span.glyphicon.glyphicon.glyphicon-download-alt
                    td
                        pre.js-test-result(data-url="#{jmx}")
    script(src="/javascripts/index.js")
